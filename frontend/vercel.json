{
  "version": 2,
  "framework": "vite",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "outputDirectory": "dist" }
    }
  ],
  "installCommand": "pnpm install",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://marrakech-reviews-backend.vercel.app/api/$1"
    },
    {
      "source": "/sitemap.xml",
      "destination": "https://marrakech-reviews-backend.vercel.app/sitemap.xml"
    },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
